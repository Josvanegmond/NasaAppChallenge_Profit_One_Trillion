        (function() {
			var director= new CAAT.Director().initialize(
		        600,
		        600,
		        document.getElementById('canvas') );
		 
			var scene = director.createScene();
			
			for( var i = 0; i < 10; i ++ )
			{
				new AsteroidActor( scene );
			}
			
			CAAT.loop(1);
		})();
